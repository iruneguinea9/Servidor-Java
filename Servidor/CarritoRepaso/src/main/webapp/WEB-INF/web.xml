<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistro</servlet-name>
        <servlet-class>servlets.ServletRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAgregarLineaPedido</servlet-name>
        <servlet-class>servlets.ServletAgregarLineaPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdateLineaPedido</servlet-name>
        <servlet-class>servlets.ServletUpdateLineaPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGuardarCompra</servlet-name>
        <servlet-class>servlets.ServletGuardarCompra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistro</servlet-name>
        <url-pattern>/ServletRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAgregarLineaPedido</servlet-name>
        <url-pattern>/ServletAgregarLineaPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdateLineaPedido</servlet-name>
        <url-pattern>/ServletUpdateLineaPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGuardarCompra</servlet-name>
        <url-pattern>/ServletGuardarCompra</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
